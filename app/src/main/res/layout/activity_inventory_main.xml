<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/btAddCategory"
        android:layout_width="153dp"
        android:layout_height="160dp"
        android:layout_marginStart="48dp"
        android:text="Add Category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.264" />

    <Button
        android:id="@+id/btAddProduct"
        android:layout_width="153dp"
        android:layout_height="160dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="48dp"
        android:text="Add Product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btAddCategory"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btListCategories"
        android:layout_width="153dp"
        android:layout_height="160dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="40dp"
        android:text="List Categories"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btAddCategory"
        app:layout_constraintVertical_bias="0.145" />

    <Button
        android:id="@+id/btListProduct"
        android:layout_width="153dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="44dp"
        android:text="List Products"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toEndOf="@+id/btListCategories"
        app:layout_constraintTop_toBottomOf="@+id/btAddProduct"
        app:layout_constraintVertical_bias="0.153" />


</androidx.constraintlayout.widget.ConstraintLayout>